<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Joker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainGreen</item>
        <item name="colorPrimaryVariant">@color/mainGreen</item>
        <item name="colorOnPrimary">@color/mainGreen</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item> <!-- 타이블 바 없애기 시계 밑에있는게 타이틀 바입니다. -->
        <item name="windowActionBar">true</item> <!-- 타이블 바 없애기 시계 밑에있는게 타이틀 바입니다. -->

        <item name="android:statusBarColor" tools:ignore="DuplicateDefinition" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


    </style>

    <style name="Theme.Joker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Joker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Joker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>