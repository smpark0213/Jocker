<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/signup05_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/mainGreen"
                android:textSize="20sp">
            </TextView>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/toolbar_bottom_boarder"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitegray"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup05_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입이 끝났습니다"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/signup05_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조커의 회원이 되신걸 환영합니다. \n로그인을 통해 커뮤니티에 참여해 보세요 "
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signup05_button01"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/all_button_bg_ripple_round_15"
                android:text="로그인하기"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

